{
  "manifest_version": 3,
  "name": "Codebuddy",
  "description": "Extension that extracts page data for use by the Codebuddy AI",
  "version": "1.0",
  "action": {
    
    "default_icon": "codebuddy.png"
  },
   "permissions": [
     "contextMenus",
	 "scripting",
     "offscreen",
     "clipboardWrite"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "service-worker.js"
  },
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  }
}